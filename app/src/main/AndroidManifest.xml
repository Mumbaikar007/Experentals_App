<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adarsh.experentals">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Following 3 permissions are added because Gallery errors -->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Internet permission -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logonav"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AuthActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProfileActivity"
            android:label="You are logged in !"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PlaceAdActivity"
            android:label="Place Advertisement"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Receiver"
            android:label="Search on Experentals"
            android:theme="@style/AppTheme" />
        <activity android:name=".ItemImage"
            android:theme="@style/AppTheme" />
        <activity android:name=".ReceiverItemSelect"
            android:theme="@style/AppTheme" />
        <activity android:name=".RenterStatus"
            android:theme="@style/AppTheme" />
        <activity android:name=".RenterStatus2"
            android:theme="@style/AppTheme" />
        <activity android:name=".laCart"
            android:theme="@style/AppTheme" ></activity>
    </application>

</manifest>