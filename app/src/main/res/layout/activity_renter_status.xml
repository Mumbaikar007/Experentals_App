<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adarsh.experentals.RenterStatus">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="192dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Items On Rent"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458"
        tools:layout_editor_absoluteX="96dp" />

    <listView
        android:id="@+id/listViewYet"
        android:layout_width="351dp"
        android:layout_height="209dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <listView
        android:id="@+id/listViewDone"
        android:layout_width="348dp"
        android:layout_height="158dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/listViewYet"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/listViewYet" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="221dp"
        android:layout_height="22dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Yet to bid"
        app:layout_constraintBottom_toTopOf="@+id/listViewYet"
        app:layout_constraintEnd_toEndOf="@+id/listViewYet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/listViewYet" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="253dp"
        android:layout_height="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Bidded"
        app:layout_constraintBottom_toTopOf="@+id/listViewDone"
        app:layout_constraintEnd_toEndOf="@+id/listViewYet"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="@+id/listViewYet" />


</android.support.constraint.ConstraintLayout>
